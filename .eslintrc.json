{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "es2017": true,
    "es2020": true,
    "es2021": true,
    "jquery": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [],
  "rules": {
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-debugger": "warn",
    "no-extra-boolean-cast": "off"
  },
  "ignorePatterns": ["dev/js/ext/*.js"]
}
