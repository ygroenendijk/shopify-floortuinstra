{%- assign style_guide_sections = 'colors, color-schemes, typography, rte, grid, logo, icons, buttons, forms, options, quantity-input, collapsibles, toggle-element, badges, prices, collection-cards, product-cards, article-cards'
  | split: ', '
-%}

{%- capture container_content -%}
  <div class="grid grid-cols-12 gap-base">
    {% comment %} Content {% endcomment %}
    <div class="col-span-12 divide-y lg:col-span-9">
      <div id="intro" class="pb-10 lg:pb-16">
        <h1>
          {{- page.title | default: 'Styles' }}
          | <span class="text-color-gradient">&lt;H1&gt;</span>
        </h1>
        <p>
          This page is here to show off styles and components for standard page elements such as typography, form
          elements, icons, product cards and more. These are hard coded in an alternate page template file containing
          the section
          <code>main-styleguide.liquid</code>
          .
        </p>
      </div>

      {%- for section in style_guide_sections -%}
        {%- assign heading = section | replace: '-', ' ' | capitalize -%}

        <div id="styleguide-{{- section -}}" class="style-guide__section py-10 lg:py-16">

          <h2 class="">
            {{- heading -}}
          </h2>

          <div class="space-y-12">
            {%- liquid
              case section
                when 'colors'
                  render 'styleguide-colors'
                when 'color-schemes'
                  render 'styleguide-color-schemes'
                when 'typography'
                  render 'styleguide-typography'
                when 'rte'
                  render 'styleguide-rte'
                when 'grid'
                  render 'styleguide-grid'
                when 'logo'
                  render 'styleguide-logo'
                when 'icons'
                  render 'styleguide-icons'
                when 'buttons'
                  render 'styleguide-buttons'
                when 'forms'
                  render 'styleguide-forms'
                when 'options'
                  render 'styleguide-options'
                when 'quantity-input'
                  render 'styleguide-quantity-input'
                when 'collapsibles'
                  render 'styleguide-collapsibles'
                when 'toggle-element'
                  render 'styleguide-toggle-element'
                when 'badges'
                  render 'styleguide-badges'
                when 'prices'
                  render 'styleguide-prices'
                when 'product-cards'
                  render 'styleguide-product-cards'
                when 'article-cards'
                  render 'styleguide-article-cards'
                when 'collection-cards'
                  render 'styleguide-collection-cards'
              endcase
            -%}
          </div>
        </div>
      {%- endfor -%}
    </div>

    {% comment %} Menu {% endcomment %}
    <div class="sticky top-24 hidden self-start rounded bg-gray-100 p-4 lg:col-span-3 lg:block">
      <ul class="z-10 flex flex-col gap-2">
        {%- for section in style_guide_sections -%}
          {%- assign heading = section | replace: '-', ' ' | capitalize -%}

          <li>
            <a href="#styleguide-{{- section -}}">{{- heading -}}</a>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
{%- endcapture -%}

{%- render 'format-container', content: container_content -%}

{% schema %}
  {
    "name": "Styles page",
    "tag": "section",
    "settings": []
  }
{% endschema %}
