{%- capture container_content -%}
  <div class="mx-auto max-w-sm md:mb-28">
    {%- form 'reset_customer_password', class: 'form' -%}
      <div class="field">
        <label class="field__label" for="password">
          {%- render "render-translation", namespace: "customer.reset_password", key: "password", fallback: "Password" -%}
        </label>
        <input
          type="password"
          name="customer[password]"
          id="password"
          class="field__input"
          autocomplete="new-password"
          required
          {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="password-error"
          {% endif %}
          placeholder="{%- render "render-translation", namespace: "customer.reset_password", key: "password", fallback: "Password" -%}">
        {%- if form.errors contains 'password' -%}
          <span id="password-error" class="field__message field__message--error">
            {{ form.errors.translated_fields['password'] | capitalize }}
            {{ form.errors.messages['password'] }}
          </span>
        {%- endif -%}
      </div>

      <div class="field">
        <label class="field__label" for="password_confirmation">
          {%- render "render-translation", namespace: "customer.reset_password", key: "password_confirm", fallback: "Confirm password" -%}
        </label>
        <input
          type="password"
          name="customer[password_confirmation]"
          id="password_confirmation"
          class="field__input"
          autocomplete="new-password"
          required
          {% if form.errors contains 'password_confirmation' %}
            aria-invalid="true"
            aria-describedby="password_confirmation-error"
          {% endif %}
          placeholder="{%- render "render-translation", namespace: "customer.reset_password", key: "password_confirm", fallback: "Password" -%}">
        {%- if form.errors contains 'password_confirmation' -%}
          <span id="password_confirmation-error" class="field__message field__message--error">
            {{ form.errors.translated_fields['password_confirmation'] | capitalize }}
            {{ form.errors.messages['password_confirmation'] }}
          </span>
        {%- endif -%}
      </div>

      <div class="form__actions buttons">
        <button class="button button--primary">
          {%- render "render-translation", namespace: "customer.reset_password", key: "submit", fallback: "Submit" -%}
        </button>
      </div>
    {%- endform -%}
  </div>
{%- endcapture -%}

{%- render 'account-header' -%}

{%- comment -%} Render the content {%- endcomment -%}
{%- render 'render-container-content', content: container_content -%}
