        ]
      },
      {
        "type": "checkbox",
        "id": "swiper_navigation",
        "label": "Show Navigation",
        "default": true
      }
    ],
    "presets": [
      {
        "name": "Product recommendations"
      }
    ],
    "enabled_on": {
      "templates": ["product"]
    }
  }
{% endschema %}
