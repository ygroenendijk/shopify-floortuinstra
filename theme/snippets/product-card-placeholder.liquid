{%- comment -%}
  Renders a product card placeholder
  Usage:
  {%- render 'product-card-placeholder' -%}
{%- endcomment -%}

<div class="product-card relative z-0">
  <div class="product-card__inner" tabindex="-1">
    <div class="product-card__image relative  ">
      <figure class="img img--wrapper bg mb-0 block aspect-[5/6]  text-accent">
        {{- 'collection-1' | placeholder_svg_tag -}}
      </figure>
    </div>
  </div>

  <div class="product-card__information block pt-2 text-center text-sm">
    <p class="product-card__title block text-sm font-bold">Product title</p>
  </div>

  <div class="product-card__price flex items-center justify-center text-center text-sm">
    {%- render 'render-price' -%}
  </div>
</div>
