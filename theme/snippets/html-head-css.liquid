{%- comment -%}
  Loads main css inline
  If development theme load load it as file for HMR support
  Inline liquid is generated by liquid.
  This makes sure that all main CSS is already inline for page speed purposes
{%- endcomment -%}
{% style %}
  @layer h1-style-base, h1-style-modules, h1-style-components, h1-style-utilities, h1-style-sections;
{% endstyle %}

{%- liquid
  if theme.role contains 'development'
    render 'import-styles', file_name: 'main-base-prod.css', force: true
    render 'import-styles', file_name: 'main-components-prod.css', force: true
    render 'import-styles', file_name: 'main-utilities-prod.css', force: true
  else
    capture main_css
      render 'main-base-css'
      render 'main-components-css'
      render 'main-utilities-css'
    endcapture
    unless main_css contains 'Liquid error'
      echo main_css
    endunless
  endif
-%}

{%- comment -%} Add the policy styling over the shopify styling page {%- endcomment -%}
{%- liquid
  if request.page_type == 'policy'
    render 'import-styles', file_name: 'component-policy.css', force: true
  endif
-%}
