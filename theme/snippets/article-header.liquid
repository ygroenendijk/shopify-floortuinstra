{%- comment -%} Capture container content {%- endcomment -%}
{%- capture container_content -%}
  {%- for block in section.blocks -%}

    {%- case block.type -%}
        {% comment %} Title {% endcomment %}
      {%- when 'title' -%}

        <div
          class="article-header__information mx-auto grid max-w-screen-lg items-center gap-y-6 gap-x-base md:text-center"
          {{ block.shopify_attributes }}
        >
          {%- liquid
            # Tag
            if block.settings.blog_show_category
              for tag in article.tags
                if tag contains 'type:' or tag contains 'Type:'
                  assign article_type = tag | downcase | remove: 'type:'
                endif
                echo '<p class="article-header__type  text-sm font-semibold uppercase text-primary">'
                echo article_type
                echo '</p>'
              endfor
            endif
          -%}

          {% comment %} Title {% endcomment %}
          <h1 class="article-header__title">
            {{ article.title }}
          </h1>

          <div class="article-header__author-and-date flex items-center justify-between gap-4 md:justify-center">
            {% comment %} Author {% endcomment %}
            {%- if block.settings.blog_show_author -%}
              <address class="article-header__author  text-sm font-semibold not-italic">
                {{ 'blogs.article.written_by' | t: author: article.author }}
              </address>
            {%- endif -%}

            {%- if block.settings.blog_show_author and block.settings.blog_show_date -%}
              <p class="hidden text-secondary-200 md:block">|</p>
            {%- endif -%}

            {% comment %} Date {% endcomment %}
            {%- if block.settings.blog_show_date -%}
              <p class="article-header__date text-secondary-200">
                {{ article.published_at | time_tag: format: 'day_month_year' }}
              </p>
            {%- endif -%}
          </div>
        </div>

        {% comment %} Featured image {% endcomment %}
      {%- when 'featured_image' -%}
        {%- if article.image -%}
          <div class="article-header__featured-image" {{ block.shopify_attributes }}>
            {%- render 'responsive-image',
              image_object: article.image,
              alt: article.title,
              max_width: 1360,
              sizes: '(min-width: 1440px) 1360px, 100vw',
              class: 'max-w-full h-auto block mx-auto',
              alt: article.title,
              title: article.title
            -%}
          </div>
        {%- endif -%}
    {%- endcase -%}
  {%- endfor -%}
{%- endcapture -%}

{%- liquid
  # Capture container class
  capture container_class
    echo class | append: ' article-header space-y-8'
  endcapture

  # Render the content
  render 'render-container-content', tag: 'header', class: container_class, content_class: 'space-y-8', content: container_content
-%}
