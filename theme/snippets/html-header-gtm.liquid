{%- if settings.gtm_id != blank -%}
  {%- if container == 'head' -%}
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id={{- settings.gtm_id -}}"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', '{{- settings.gtm_id -}}');
    </script>
    <!-- End Google Tag Manager -->
  {%- elsif container == 'body' -%}
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id={{- settings.gtm_id -}}"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
  {%- endif -%}
{%- endif -%}
