<ul class="collection-list grid grid-cols-12 items-end gap-x-4 gap-y-12">
  {%- for collection in collections -%}
    {%- if collection.all_products_count > 0 -%}
      {%- liquid
        assign lazy = true
        if forloop.index <= 1
          assign lazy = false
        endif
      -%}
      <li class="col-span-6 md:col-span-4">
        {%- render 'collection-card',
          collection: collection,
          aspect_ratio: section.settings.image_ratio,
          image_lazy: lazy
        -%}
      </li>
    {%- endif -%}
  {%- endfor -%}
</ul>
