  {
    "name": "Collection page",
    "settings": [
      {
        "type": "select",
        "id": "pagination_view",
        "label": "Pagination type",
        "default": "",
        "options": [
          {
            "value": "",
            "label": "Default"
          },
          {
            "value": "load-more",
            "label": "Load more"
          }
        ]
      },
      {
        "type": "header",
        "content": "Filter availability"
      },
      {
        "type": "text",
        "id": "availability_filter_name",
        "label": "Availability filter name",
        "default": "Availability",
        "info": "Set the name as it's used for product availability. This will render the filter as a toggle/switch."
      },
      {
        "type": "header",
        "content": "Filter colors"
      },
      {
        "type": "text",
        "id": "color_filter_name",
        "label": "Color filter name",
        "default": "Color",
        "info": "Set the name as it's used for product variants. This will be used to determine the color option in the filters and the product options so they can be displayed as swatches."
      },
      {
        "type": "textarea",
        "id": "color_mappings",
        "label": "Color mappings",
        "info": "Set up color mappings. One per line. color|#hexvalue or color name, where 'color' is lowercase and hyphened, like 'dark-blue'. For a list of accepted color names or hex codes, [got to this page](https://htmlcolorcodes.com/color-names/).",
        "default": "blue|SteelBlue\nred|Red\norange|DarkOrange\nblack|#000\ngray|Silver\nlight_brown|Tan\nwhite|white\nyellow|Gold",
        "placeholder": "blue|#68b7ff\nred|#ff0000\nblack|#000"
      },
      {
        "type": "header",
        "content": "Filter display"
      },
      {
        "type": "select",
        "id": "filter_display",
        "label": "Filter display",
        "info": "Applies to larger screens. Either keep the filters always visible or hide them in a drawer.",
        "default": "drawer",
        "options": [
          {
            "value": "drawer",
            "label": "In drawer"
          },
          {
            "value": "grid",
            "label": "In grid"
          }
        ]
      },
      {
        "type": "header",
        "content": "Filter options"
      },
      {
        "type": "checkbox",
        "id": "enable_filter_collapsibles",
        "default": true,
        "label": "Enable collapsible panes",
        "info": "Renders filter groups in collapsible panes."
      },
      {
        "type": "textarea",
        "id": "render_as_swatch",
        "label": "Filters to be rendered as swatches",
        "info": "Add the filter names you wish to render as swatches. By default, filters are rendered as checkboxes. One per line.",
        "default": "Color\nSize",
        "placeholder": "Color\nSize"
      },
      {
        "type": "range",
        "id": "products_per_page",
        "min": 4,
        "max": 24,
        "step": 1,
        "default": 16,
        "label": "Products per page"
      }
    ]
  },
  {
    "name": "Product & Product card",
    "settings": [
