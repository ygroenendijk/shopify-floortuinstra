  {
    "name": "Klaviyo",
    "settings": [
      {
        "type": "checkbox",
        "id": "klaviyo_bis",
        "label": "Enable Back in stock",
        "info": "With the API credentials filled in, this will enable the Klaviyo Back in Stock functionality",
        "default": false
      },
      {
        "type": "text",
        "id": "klaviyo_bis_api_key",
        "label": "Klaviyo account API key",
        "info": "[Where to find this?](https://help.klaviyo.com/hc/en-us/articles/115005062267-How-to-Manage-Your-Account-s-API-Keys#find-your-api-keys2)"
      },
      {
        "type": "text",
        "id": "klaviyo_bis_listid",
        "label": "Klaviyo List ID",
        "info": "[Where to find this?](https://help.klaviyo.com/hc/en-us/articles/115005078647-How-to-Find-a-List-ID#find-your-list-id1)"
      },
      {
        "type": "header",
        "content": "Pop-up settings"
      },
      {
        "type": "checkbox",
        "id": "klaviyo_bis_subscribe_checked",
        "label": "Check opt-in checkbox by default",
        "info": "Check the checkbox for the opt-in by default. Make sure this allowed in your country/region.",
        "default": false
      },
      {
        "type": "color",
        "id": "klaviyo_bis_background_color",
        "label": "Button background color",
        "default": "#439fdb"
      },
      {
        "type": "color",
        "id": "klaviyo_bis_button_text_color",
        "label": "Button text color",
        "default": "#ffffff"
      }
    ]
  },
