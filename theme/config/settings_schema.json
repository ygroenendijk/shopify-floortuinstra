  {
    "name": "Branding",
    "settings": [
      {
        "type": "text",
        "id": "shop_name",
        "label": "Shop name",
        "info": "The shop name is used in various visible and invisible (SEO) places.",
        "default": "Floor Tuinstra"
      },
      {
        "type": "header",
        "content": "Font families"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "default": "raleway_n4",
        "label": "Body font family"
      },
      {
        "type": "font_picker",
        "id": "font_secondary",
        "default": "lora_n4",
        "label": "Secondary font family"
      }
    ]
  },
  {
    "name": "Google settings",
    "settings": [
      {
        "type": "textarea",
        "id": "google_site_verification",
        "label": "Google Site verification code",
        "info": "The verification code of Google to verify your website. For multiple accounts create a comma separated list"
